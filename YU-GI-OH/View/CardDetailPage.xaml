<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="YU_GI_OH.View.CardDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:YU_GI_OH.ViewModel"
    Title="{Binding Card.name}"
    x:DataType="vm:CardDetailPageViewModel">

    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior
            Command="{Binding ApearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>


    <Grid
        BackgroundColor="ForestGreen"
        RowDefinitions="300,40,40,*">

        <Image
            HorizontalOptions="CenterAndExpand"
            Margin="20"
            Source="{Binding Card.cardImageUrl}" />

        <Label Text="{Binding CardDetail.atk}"/>
    </Grid>

</ContentPage>